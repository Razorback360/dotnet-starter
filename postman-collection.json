{
  "info": {
    "name": "CarDealer API",
    "description": "Complete API collection for CarDealer with JWT Authentication and OTP Verification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5212",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "otpCode",
      "value": "CHECK_CONSOLE_LOGS",
      "type": "string"
    },
    {
      "key": "vehicleId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register New Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('userId', response.userId);",
                  "    pm.collectionVariables.set('otpPurpose', response.purpose);",
                  "    console.log('Registration successful! Check server logs for OTP code.');",
                  "    console.log('UserId:', response.userId);",
                  "    console.log('Purpose:', response.purpose);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new customer account. OTP will be logged in the server console."
          },
          "response": []
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('userId', response.userId);",
                  "    pm.collectionVariables.set('otpPurpose', response.purpose);",
                  "    console.log('Login initiated! Check server logs for OTP code.');",
                  "    console.log('UserId:', response.userId);",
                  "    console.log('Purpose:', response.purpose);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@cardealer.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with admin credentials from seed data. OTP will be logged in the server console."
          },
          "response": []
        },
        {
          "name": "Login Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('userId', response.userId);",
                  "    pm.collectionVariables.set('otpPurpose', response.purpose);",
                  "    console.log('Login initiated! Check server logs for OTP code.');",
                  "    console.log('UserId:', response.userId);",
                  "    console.log('Purpose:', response.purpose);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with customer credentials (use after registration). OTP will be logged in the server console."
          },
          "response": []
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "    console.log('OTP verified successfully!');",
                  "    console.log('Token:', response.token);",
                  "    console.log('User:', response.user);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{userId}},\n  \"purpose\": \"login\",\n  \"code\": \"{{otpCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/otp/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "otp", "verify"]
            },
            "description": "Verify OTP code. Replace {{otpCode}} with the actual OTP from server logs. This will automatically save the JWT token."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for registration, login, and OTP verification"
    },
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Get All Vehicles",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/vehicles",
              "host": ["{{baseUrl}}"],
              "path": ["vehicles"]
            },
            "description": "Get all vehicles without any filters. No authentication required."
          },
          "response": []
        },
        {
          "name": "Get Vehicles with Filters",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/vehicles?make=Toyota&minPrice=20000&maxPrice=50000&status=Available",
              "host": ["{{baseUrl}}"],
              "path": ["vehicles"],
              "query": [
                {
                  "key": "make",
                  "value": "Toyota"
                },
                {
                  "key": "model",
                  "value": "Camry",
                  "disabled": true
                },
                {
                  "key": "minYear",
                  "value": "2022",
                  "disabled": true
                },
                {
                  "key": "maxYear",
                  "value": "2024",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "20000"
                },
                {
                  "key": "maxPrice",
                  "value": "50000"
                },
                {
                  "key": "status",
                  "value": "Available"
                }
              ]
            },
            "description": "Search vehicles with optional filters. Example searches for Toyota vehicles between $20k-$50k that are available."
          },
          "response": []
        },
        {
          "name": "Get Vehicle by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/vehicles/1",
              "host": ["{{baseUrl}}"],
              "path": ["vehicles", "1"]
            },
            "description": "Get details of a specific vehicle by ID. ID 1 should be the Toyota Camry from seed data."
          },
          "response": []
        },
        {
          "name": "Create Vehicle (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Lexus\",\n  \"model\": \"RX 350\",\n  \"year\": 2024,\n  \"price\": 55000.00,\n  \"mileage\": 2000,\n  \"color\": \"Pearl White\",\n  \"status\": \"Available\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vehicles",
              "host": ["{{baseUrl}}"],
              "path": ["vehicles"]
            },
            "description": "Create a new vehicle listing. Requires Admin authentication."
          },
          "response": []
        },
        {
          "name": "Update Vehicle - Initiate (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('otpPurpose', response.purpose);",
                  "    console.log('Update initiated! Check server logs for OTP code.');",
                  "    console.log('Purpose:', response.purpose);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 27500.00,\n  \"mileage\": 16000,\n  \"status\": \"Available\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vehicles/1",
              "host": ["{{baseUrl}}"],
              "path": ["vehicles", "1"]
            },
            "description": "Initiate vehicle update. Requires Admin authentication and OTP verification. Updates Toyota Camry price and mileage."
          },
          "response": []
        }
      ],
      "description": "Vehicle management endpoints"
    },
    {
      "name": "Purchases (Customer)",
      "item": [
        {
          "name": "Create Purchase Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('otpPurpose', response.purpose);",
                  "    pm.collectionVariables.set('vehicleId', response.vehicleId);",
                  "    console.log('Purchase request initiated! Check server logs for OTP code.');",
                  "    console.log('VehicleId:', response.vehicleId);",
                  "    console.log('Purpose:', response.purpose);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleId\": 8\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/purchases/request",
              "host": ["{{baseUrl}}"],
              "path": ["purchases", "request"]
            },
            "description": "Create a purchase request for a vehicle. Requires Customer authentication and OTP verification. Vehicle ID 8 is the Tesla Model 3."
          },
          "response": []
        },
        {
          "name": "Get Purchase History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/purchases/history",
              "host": ["{{baseUrl}}"],
              "path": ["purchases", "history"]
            },
            "description": "Get purchase history for the authenticated customer."
          },
          "response": []
        }
      ],
      "description": "Customer purchase endpoints - requires Customer role"
    },
    {
      "name": "Sales (Admin)",
      "item": [
        {
          "name": "Process Sale",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales/1/process",
              "host": ["{{baseUrl}}"],
              "path": ["sales", "1", "process"]
            },
            "description": "Process a pending purchase request and complete the sale. Requires Admin authentication. Replace '1' with the actual purchase request ID."
          },
          "response": []
        }
      ],
      "description": "Sales management endpoints - requires Admin role"
    },
    {
      "name": "Customers (Admin)",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/customers",
              "host": ["{{baseUrl}}"],
              "path": ["customers"]
            },
            "description": "Get list of all customers in the system. Requires Admin authentication."
          },
          "response": []
        }
      ],
      "description": "Customer management endpoints - requires Admin role"
    }
  ]
}
